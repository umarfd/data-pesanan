<!DOCTYPE html>
<html>
<head>
  <title>Daftar Pesanan</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h1>Daftar Pesanan</h1>
    <a href="/pesanan/add" class="btn btn-success mb-3">Tambah Pesanan</a>
    
    <table class="table table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Nama Pelanggan</th>
          <th>Produk</th>
          <th>Jumlah</th>
          <th>Alamat</th>
          <th>Aksi</th>
        </tr>
      </thead>
      <tbody>
        <% pesanan.forEach(p => { %>
          <tr>
            <td><%= p.id %></td>
            <td><%= p.nama_pelanggan %></td>
            <td><%= p.produk %></td>
            <td><%= p.jumlah %></td>
            <td><%= p.alamat %></td>
            <td>
              <a href="/pesanan/edit/<%= p.id %>" class="btn btn-warning btn-sm">Edit</a>
              <a href="/pesanan/delete/<%= p.id %>" class="btn btn-danger btn-sm">Hapus</a>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
    <a href="/" class="btn btn-secondary">Kembali</a>
  </div>
</body>
</html>
